---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
	<nav>
		<a class="site-title" href="/">
			<svg class="logo" viewBox="0 0 64 64" width="24" height="24" fill="none" stroke="currentColor" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"><circle cx="32" cy="8" r="3.5" fill="currentColor" stroke="none"/><line x1="32" y1="16" x2="32" y2="48"/><line x1="32" y1="48" x2="52" y2="48"/><path d="M32 48 L32 55 Q32 58 29 58 L17 58 Q14 58 14 55 L14 44"/></svg>
			{SITE_TITLE}
		</a>
		<div class="nav-links">
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<ThemeToggle />
		</div>
	</nav>
</header>
<style>
	header {
		padding: 1.25rem 1.5rem;
		position: sticky;
		top: 0;
		background: var(--bg);
		z-index: 100;
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgb(var(--border));
		transition: background-color 0.3s ease, border-color 0.3s ease;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 680px;
		margin: 0 auto;
	}
	.site-title {
		font-weight: 700;
		font-size: 1.05rem;
		text-decoration: none;
		color: rgb(var(--text));
		display: flex;
		align-items: center;
		gap: 0.5rem;
		letter-spacing: -0.02em;
		transition: color 0.2s ease;
	}
	.site-title:hover {
		color: var(--accent);
		text-decoration: none;
	}
	.logo {
		height: 1.5rem;
		width: auto;
		flex-shrink: 0;
	}
	.nav-links {
		display: flex;
		align-items: center;
		gap: 1.75rem;
	}
	.nav-links :global(a) {
		color: rgb(var(--text-muted));
		text-decoration: none;
		font-size: 0.9rem;
		font-weight: 500;
		transition: color 0.2s ease;
	}
	.nav-links :global(a:hover) {
		color: var(--accent);
		text-decoration: none;
	}
	.nav-links :global(a.active) {
		color: rgb(var(--text));
	}
</style>
